<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer ="start">
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"

android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
android:orientation="vertical"
    >


<TextView
    android:id="@+id/appointmentPopUp1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Το αίτημα σας έχει σταλεί στο φαρμακείο."
    android:textColor="@color/colorPrimaryDark"
    android:textSize="15dp"
    android:layout_marginTop="240dp"
    android:layout_marginLeft="50dp"
    tools:layout_editor_absoluteX="11dp"
    tools:layout_editor_absoluteY="72dp" />

<TextView
    android:id="@+id/appointmentPopUp2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="115dp"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="Αναμένεται Απάντηση."
    android:textColor="@color/colorPrimaryDark"
    android:textSize="15dp"
    tools:layout_editor_absoluteX="11dp"
    tools:layout_editor_absoluteY="179dp" />

<TextView
    android:id="@+id/appointmentPopUp3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="140dp"

    android:ems="10"
    android:inputType="textPersonName"
    android:text="Ευχαριστούμε."
    android:textColor="@color/colorPrimaryDark"
    android:textSize="15dp"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="280dp" />

</LinearLayout>

<android.support.design.widget.NavigationView

app:headerLayout="@layout/header"
android:layout_width="210dp"
android:layout_height="wrap_content"
android:background="@color/white"
android:id="@+id/nav_view"
app:itemTextColor="@color/darkgray"
app:itemIconTint="@color/darkgray"
app:menu="@menu/drawermenu"
android:layout_gravity="start">

</android.support.design.widget.NavigationView>

    </android.support.v4.widget.DrawerLayout>